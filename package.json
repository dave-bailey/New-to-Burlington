{
  "name": "yelpington",
  "version": "1.0.0",
  "description": "Burlington Code Academy restaurant app",
  "main": "index.js",
  "scripts": {
    "test": "node sanityCheck.js",
    "build": "cd client && npm run build",
    "install-client": "cd client && npm install",
    "heroku-postbuild": "npm run install-client && npm run build",
    "server": "nodemon server.js",
    "develop": "concurrently --kill-others-on-fail \"npm run server\" \"npm run start --prefix client\"",
    "start": "concurrently --kill-others-on-fail \"npm run server\" \"npm run start --prefix client\""
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/BurlingtonCodeAcademy/yelpington.git"
  },
  "author": "Burlington Code Academy",
  "license": "ISC",
  "bugs": {
    "url": "https://github.com/BurlingtonCodeAcademy/yelpington/issues"
  },
  "homepage": "https://github.com/BurlingtonCodeAcademy/yelpington#readme",
  "dependencies": {
    "cors": "^2.8.5",
    "express": "^4.17.3",
    "nodemon": "^2.0.16"
  }
}
